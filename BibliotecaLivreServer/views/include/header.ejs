<!DOCTYPE html>
<html>
	<head>
		<link rel='stylesheet' href='/stylesheets/style.css' />
		<link rel='stylesheet' href='/stylesheets/bootstrap/css/bootstrap.min.css' />
		<script type="text/javascript" src="/stylesheets/bootstrap/js/jquery.js"></script>
    	<script type="text/javascript" src="/stylesheets/bootstrap/js/bootstrap.min.js"></script>
	</head>
<body>
    <!-- Second navbar for categories -->
    <nav class="navbar navbar-default">
    	<div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
	        <div class="navbar-header">
	        	<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-2">
	            <span class="sr-only">Toggle navigation</span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	        	</button>
	        	<div class="brando">
					<h1>
						Biblioteca<span style="color: #3F51B5">Livre</span>
					</h1>
				</div>
	        </div>
    
        <!-- Collect the nav links, forms, and other content for toggling -->
	        <div class="collapse navbar-collapse" id="navbar-collapse-2">
	        <div class="nav-letras">
	          <ul class="nav navbar-nav navbar-right">
	            <li><a href="/web">In√≠cio</a></li>
	            <li><a href="/web/about">Sobre</a></li>
	            <li><a href="/web/contact">Contato</a></li>
	          <% if(session){ %>
	            <li><a href="/conta/<%= session %>">Conta</a></li>
	          <% } %>
	          <% if(!session){ %>
	            <li>
	              <a class="btn btn-default btn-outline btn-circle collapsed"  data-toggle="collapse" href="#nav-collapse2" aria-expanded="false" aria-controls="nav-collapse2">Log In</a>
	            </li>
	          <% } else { %>
	          	<li>
	          		<button type="submit" class="btn btn-default" onclick="logoutUsuario()">Log Out</button>
	          	</li>
	          <% } %>
	          </ul>
	          <% if(!session){ %>
	          <div class="collapse nav navbar-nav nav-collapse slide-down" id="nav-collapse2">
	            <form class="navbar-form navbar-right form-inline" role="form" method="post" action="/web/login">
	              <div class="form-group">
	                <label class="sr-only" for="Login">Login</label>
	                <input type="login" name="Login" class="form-control" id="Login" placeholder="Login" autofocus required />
	              </div>
	              <div class="form-group">
	                <label class="sr-only" for="Senha">Senha</label>
	                <input type="password" name="Senha" class="form-control" id="Senha" placeholder="Senha" required />
	              </div>
	              <button type="submit" class="btn btn-success">Log In</button>
	              <button type="submit" class="btn btn-success" onclick="adicionarUsuario()">Cadastrar</button>
	            </form>
	          </div>
	          <% } %>
	        </div><!-- /.navbar-collapse -->
        </div><!-- ..nav-letras -->
      </div><!-- /.container -->
    </nav><!-- /.navbar -->
</body>
</html>