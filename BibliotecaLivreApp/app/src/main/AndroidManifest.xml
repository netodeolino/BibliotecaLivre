<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deolino.neto.bibliotecalivre">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activies.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activies.CreateLivroActivity"
            android:label="@string/create_livro"
            android:parentActivityName=".activies.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activies.MainActivity" />
        </activity>

        <activity
            android:name=".activies.UpdateLivroActivity"
            android:label="@string/update_livro"
            android:parentActivityName=".activies.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activies.MainActivity" />
        </activity>

        <activity
            android:name=".activies.LivroDescriptionActivity"
            android:label="@string/description_livro"
            android:parentActivityName=".activies.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activies.MainActivity" />
        </activity>

        <activity
            android:name=".activies.CidadeDescriptionActivity"
            android:label="@string/description_cidade"
            android:parentActivityName=".activies.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activies.MainActivity" />
        </activity>
    </application>

</manifest>